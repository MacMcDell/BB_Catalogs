@model mdl.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Insert</h2>
<div class="row col-md-6">

    @using (Html.BeginForm("InsertProduct", "Home", FormMethod.Post))
    {

        @Html.ValidationSummary(true)


        <div class="row">
            <div class="col-md-4 text-right">
                @Html.LabelFor(x => x.Name)
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.Name)
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-right">
                @Html.LabelFor(x => x.Price)
            </div>
            <div class="col-md-4 text-right">
                @Html.TextBoxFor(x => x.Price)
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-right">
                @Html.LabelFor(x => x.Description)
            </div>
            <div class="col-md-4 text-right">
                @Html.TextBoxFor(x => x.Description)
            </div>
        </div>
        <div>
            <input type="hidden" name="CatalogId" id="CatalogId" value="@ViewBag.CatalogId" />
            <input type="submit" class="btn btn-primary" name="action" value="insert" />

        </div>


    }
    <a href="/">Cancel</a>


    </div>
